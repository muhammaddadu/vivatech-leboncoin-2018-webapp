<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Webpack</title>
</head>
<body ng-app="application">
    <div ng-controller="ProductController">
        <div ng-if="ctrl.loading" class="product_modal">
            {{> header-transaction}}
            {{> spiner-transaction}}    
            {{> footer-transaction}}    
        </div>
        <div class="product_modal" ng-if="!ctrl.loading">
            <div class="alert alert-success" ng-if="ctrl.info">
                <strong>SUCCESS!</strong>
                <span>\{{ctrl.info}}</span>
            </div>
            <div class="alert alert-danger" ng-if="ctrl.error">
                <strong>ERROR!</strong>
                <span>\{{ctrl.error}}</span>
            </div>

            <div class="product_detail">
                <div class="product_image">
                    <div class="view-product">
                        <img src="\{{ctrl.product.image}}">
                    </div>
                </div>
                <div class="product_name">
                    <h2>\{{ctrl.product.name}}</h2>
                    <h2 class="product_price">Â¢\{{ctrl.product.price}}</h2>
                </div>
            </div>
            <div class="product_description">
                <h3>Description</h3>
                <div class="product_information">
                    <p>\{{ctrl.product.description}}</p>
                </div>
            </div>
        </div>
        <div class="footer" ng-if="!ctrl.loading">
            <div class="purchase" ng-click="ctrl.purchase()"> Purchase </div>
        </div>
    </div>
</div>
</body>
</html>
